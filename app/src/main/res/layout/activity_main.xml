<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fucc.autotextview.MainActivity">

    <com.example.fucc.autotextview.AutoTextView.AutoScrollTextView
        android:id="@+id/auto_text_scroll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#0cb3c2"
        android:text="Hello! scroll! Hello! scroll! Hello! scroll! Hello! scroll!"
        app:textColor="#2df144"
        app:textEffect="scroll"
        app:textSpeed="10" />

    <com.example.fucc.autotextview.AutoTextView.AutoScrollTextView
        android:id="@+id/auto_text_shader"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/auto_text_scroll"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#0cb3c2"
        android:text="Hello ! shader! Hello ! shader!"
        app:textColor="#652df1"
        app:textEffect="shader"
        app:textSpeed="10" />

    <com.example.fucc.autotextview.AutoTextView.AutoScrollTextView
        android:id="@+id/auto_text_switch"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/auto_text_shader"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#0cb3c2"
        android:text="Hello World!"
        app:textColor="#f1e02d"
        app:textEffect="switch_horizontal"
        app:textSpeed="10" />

</android.support.constraint.ConstraintLayout>
